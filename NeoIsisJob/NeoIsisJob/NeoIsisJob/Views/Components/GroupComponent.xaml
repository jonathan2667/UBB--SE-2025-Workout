<UserControl
    x:Class="DesktopProject.Components.GroupComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Components">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="GroupName" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="GroupDescription" FontSize="14" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</UserControl>
