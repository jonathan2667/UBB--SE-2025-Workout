<UserControl
    x:Class="DesktopProject.Components.GroupsDrawer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="300">

    <StackPanel Background="#222831" Padding="10">
        <TextBlock Text="Groups" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
        <Border BorderBrush="White" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>
        <Button x:Name="CreateGroupButton" Content="Create Group" Margin="0,0,0,10"/>
        <StackPanel x:Name="GroupsList"/>
    </StackPanel>
</UserControl>
