<UserControl
    x:Class="DesktopProject.Components.TopBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="800">

    <Grid Background="#393E46" Padding="20" MinHeight="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border 
            x:Name="Logo"
            Grid.Column="0"
            Width="40" 
            Height="40" 
            CornerRadius="20"
            HorizontalAlignment="Left"
            Background="Red">
            <Image 
                Source="../Assets/Logo.png" 
                Stretch="UniformToFill"/>
        </Border>

        <Grid Grid.Column="1" Padding="100 0 100 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button 
        x:Name="HomeButton"
        Content="Home" 
        FontSize="24" 
        Foreground="#EEEEEE" 
        Background="#393E46"
        BorderThickness="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Segoe Script"
        Grid.Column="0"/>

            <Button 
        x:Name="CreatePostButton"
        Content="Create Post" 
        FontSize="24" 
        Foreground="#EEEEEE" 
        Background="#393E46"
        BorderThickness="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Segoe Script"
        Grid.Column="1"/>

            <Button 
        x:Name="GoNeo"
        Content="Go To Neo" 
        FontSize="24" 
        Foreground="#EEEEEE" 
        Background="#393E46"
        BorderThickness="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Segoe Script"
        Grid.Column="5"/>

            <Button 
        x:Name="SeeUsersButton"
        Content="See Users" 
        FontSize="24" 
        Foreground="#EEEEEE" 
        Background="#393E46"
        BorderThickness="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Segoe Script"
        Grid.Column="2"/>

            <Button 
        x:Name="GroupsButton"
        Content="Groups" 
        FontSize="24" 
        Foreground="#EEEEEE" 
        Background="#393E46"
        BorderThickness="0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontFamily="Segoe Script"
        Grid.Column="3"/>
        </Grid>


        <Button 
            x:Name="UserButton"
            Grid.Column="2"
            Width="40" 
            Height="40" 
            CornerRadius="20"
            HorizontalAlignment="Right"
            Background="Transparent"
            BorderThickness="0"
            Padding="0">
            <Image 
                x:Name="UserImage"
                Source="../Assets/User.png" 
                Stretch="UniformToFill"
                HorizontalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
