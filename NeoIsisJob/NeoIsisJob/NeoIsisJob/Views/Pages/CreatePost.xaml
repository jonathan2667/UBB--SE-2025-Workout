<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DesktopProject.Pages.CreatePost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Pages"
    xmlns:components="using:DesktopProject.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Bar -->
            <RowDefinition Height="*"/>
            <!-- Scrollable Content -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <components:TopBar Grid.Row="0" x:Name="TopBar"/>

        <!-- Scrollable Main Content -->
        <ScrollViewer Grid.Row="1" 
                   VerticalScrollMode="Auto"
                   VerticalScrollBarVisibility="Auto">
            <Grid Margin="40 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="150"/>
                    <ColumnDefinition MinWidth="800"/>
                    <ColumnDefinition Width="Auto" MinWidth="150"/>
                </Grid.ColumnDefinitions>

                <!-- Form Container -->
                <Border Grid.Column="1" 
                     Background="#393E46" 
                     CornerRadius="10"
                     Padding="30"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     MaxWidth="700">

                    <StackPanel Spacing="20">
                        <!-- Title Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Post Title" Foreground="#00ADB5" FontSize="16"/>
                            <TextBox x:Name="TitleInput" 
                                  PlaceholderText="Enter your post title..."
                                  MaxLength="50"
                                  FontSize="14"
                                  Background="#D9D9D9"
                                  Foreground="Black"
                                  BorderThickness="0"
                                  CornerRadius="5"/>
                            <TextBlock x:Name="TitleCharCounter" 
                                    Text="0/50" 
                                    Foreground="Gray" 
                                    HorizontalAlignment="Right"/>
                        </StackPanel>

                        <!-- Content Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Description" Foreground="#00ADB5" FontSize="16"/>
                            <TextBox x:Name="DescriptionInput" 
                                  PlaceholderText="Write your post description..."
                                  AcceptsReturn="True"
                                  TextWrapping="Wrap"
                                  MaxLength="250"
                                  FontSize="14"
                                  Background="#D9D9D9"
                                  Foreground="Black"
                                  BorderThickness="0"
                                  CornerRadius="5"
                                  MinHeight="150"/>
                            <TextBlock x:Name="DescriptionCharCounter" 
                                    Text="0/250" 
                                    Foreground="Gray" 
                                    HorizontalAlignment="Right"/>
                        </StackPanel>

                        <TextBlock x:Name="Confirmation"/>

                        <!-- Visibility Selection -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Visibility" Foreground="#00ADB5" FontSize="16"/>
                            <ComboBox x:Name="VisibilityComboBox"
                                   Background="#D9D9D9"
                                   Foreground="Black"
                                   CornerRadius="5"
                                   SelectionChanged="VisibilityComboBox_SelectionChanged">
                                <ComboBoxItem Content="Public" Tag="Public"/>
                                <ComboBoxItem Content="Friends" Tag="Friends"/>
                                <ComboBoxItem Content="Private" Tag="Private"/>
                                <ComboBoxItem Content="Groups" Tag="Groups"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Group Selection (Visible only for Groups visibility) -->
                        <StackPanel x:Name="GroupSelectionPanel" 
                                Spacing="8"
                                Visibility="Collapsed">
                            <TextBlock Text="Select Groups" Foreground="#2563eb" FontSize="20" FontWeight="Bold"/>
                            <ListBox x:Name="GroupsListBox"
                                  Background="Black"
                                  Foreground="Black"
                                  SelectionMode="Single"
                                  MaxHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                               Margin="5"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>

                        <!-- Tags -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Tags" Foreground="#2563eb" FontSize="20" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <RadioButton x:Name="MiscRadioButton" 
                                        Content="Misc"
                                        Background="#f3f4f6" 
                                        Foreground="Black"
                                        CornerRadius="5" 
                                        Padding="12 6"/>
                                <RadioButton x:Name="FoodRadioButton" 
                                        Content="Food"
                                        Background="#f3f4f6" 
                                        Foreground="Black"
                                        CornerRadius="5" 
                                        Padding="12 6"/>
                                <RadioButton x:Name="WorkoutRadioButton" 
                                        Content="Workout"
                                        Background="#f3f4f6" 
                                        Foreground="Black"
                                        CornerRadius="5" 
                                        Padding="12 6"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Error Message & Action Buttons -->
                        <StackPanel Spacing="20">
                            <TextBlock x:Name="ErrorMessage" 
                                  Foreground="Red" 
                                  Visibility="Collapsed"/>

                            <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Spacing="12">
                                <Button Content="Cancel"
                                   Background="#e5e7eb"
                                   Foreground="Black"
                                   CornerRadius="5"
                                   Click="CancelButton_Click"/>
                                <Button Content="Post"
                                   Background="#2563eb"
                                   Foreground="White"
                                   CornerRadius="5"
                                   Click="PostButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
