<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NeoIsisJob.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoIsisJob.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="40"
                Margin="40"
                MaxWidth="480"
                HorizontalAlignment="Center">
            
            <StackPanel Spacing="24">
                <!-- Header -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <Border Background="{ThemeResource SystemAccentColorLight1}"
                            Width="64" Height="64"
                            CornerRadius="32"
                            HorizontalAlignment="Center">
                        <SymbolIcon Symbol="Contact" 
                                    Foreground="{ThemeResource SystemAccentColor}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="Welcome to NeoIsis" 
                               Style="{ThemeResource TitleTextBlockStyle}"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                    
                    <TextBlock Text="Sign in to your account" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>

                <!-- Username Input -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Username" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                    <TextBox x:Name="UsernameTextBox" 
                             PlaceholderText="Enter your username"
                             Text=""
                             FontSize="16"
                             Height="40"/>
                </StackPanel>

                <!-- Password Input -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Password" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 PlaceholderText="Enter your password"
                                 Password=""
                                 FontSize="16"
                                 Height="40"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessageTextBlock"
                           Text=""
                           Foreground="#E74C3C"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Success Message -->
                <TextBlock x:Name="SuccessMessageTextBlock"
                           Text=""
                           Foreground="#27AE60"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Content="Sign In"
                        Click="LoginButton_Click"
                        Style="{ThemeResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Height="48"
                        FontSize="16"
                        FontWeight="SemiBold"/>


            </StackPanel>
        </Border>
    </Grid>
</Page> 