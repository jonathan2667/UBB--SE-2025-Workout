<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NeoIsisJob.Views.Nutrition.Components.AddMealFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoIsisJob.Views.Nutrition.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="10" Padding="20">
        <TextBox Header="Name" Text="{Binding Name, Mode=TwoWay}" />
        <TextBox Header="Type" Text="{Binding Type, Mode=TwoWay}" />
        <TextBox Header="Cooking Level" Text="{Binding CookingLevel, Mode=TwoWay}" />
        <TextBox Header="Cooking Time (min)" Text="{Binding CookingTimeMins, Mode=TwoWay}" />
        <TextBox Header="Directions" Text="{Binding Directions, Mode=TwoWay}" />
        <TextBox Header="Image URL" Text="{Binding ImageUrl, Mode=TwoWay}" />
        <TextBlock Text="Ingredients"/>
        <ListBox x:Name="IngredientsListBox"
             ItemsSource="{Binding Ingredients}"
             DisplayMemberPath="Name"
             SelectionMode="Multiple"
             Width="200"
             Height="120"/>
        <Button Content="Add Meal" Click="OnAddMealClick" />
    </StackPanel>
</UserControl>
