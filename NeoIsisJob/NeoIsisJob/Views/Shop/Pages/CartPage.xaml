<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NeoIsisJob.Views.Shop.Pages.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoIsisJob.Views.Shop.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:component="using:NeoIsisJob.Views.Shop.Components"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <!-- Top Navigation -->
        <NavigationView x:Name="nvSample" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Main" Tag="MainPage" Tapped="GoToMainPage_Tap"/>
                <NavigationViewItem Content="Calendar" Tag="CalendarPage" Tapped="GoToCalendarPage_Tap"/>
                <NavigationViewItem Content="Workouts" Tag="WorkoutPage" Tapped="GoToWorkoutPage_Tap"/>
                <NavigationViewItem Content="Classes" Tag="ClassPage" Tapped="GoToClassPage_Tap"/>
                <NavigationViewItem Content="Rankings" Tag="RankingPage" Tapped="GoToRankingPage_Tap"/>
                <NavigationViewItem Content="Shop" Tag="ShopHomePage" Tapped="GoToShopHomePage_Tap"/>
                <NavigationViewItem Content="Wishlist" Tag="WishlistPage" Tapped="GoToWishlistPage_Tap"/>
                <NavigationViewItem Content="Cart" Tag="CartPage" Tapped="GoToCartPage_Tap"/>
                <NavigationViewItem Content="Nutrition" Tag="NutritionPage" Tapped="GoToNutritionPage_Tap"/>
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame"/>
        </NavigationView>
        
        <StackPanel Orientation="Vertical" Height="610">
            <TextBlock
                Text="Shopping Cart"
                FontSize="24"
                FontWeight="Bold"
                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                HorizontalAlignment="Left"
                Margin="20,20,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="20,0,0,0">
                    <component:VerticalRemovableProductListComponent
                        x:Name="ProductListViewControl"
                        CartItemClicked="VerticalProductListControl_ProductClicked"
                        CartItemRemoved="VerticalProductListControl_CartItemRemoved"
                        Margin="10"
                        Width="830"
                        Height="Auto"/>
                </Border>
                <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="20,0,0,0"
                        Padding="15">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Text="Order Summary"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>
                        <TextBlock
                            Text="Total:"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            HorizontalAlignment="Left"/>
                        <TextBlock
                            x:Name="TotalPriceTextBlock"
                            FontSize="18"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            HorizontalAlignment="Left"
                            Margin="0,5,0,20"/>
                        <Button
                            x:Name="CheckoutButton"
                            Content="Checkout"
                            Click="CheckoutButton_Click"
                            Style="{ThemeResource AccentButtonStyle}"
                            Width="150"
                            Height="35"
                            HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
