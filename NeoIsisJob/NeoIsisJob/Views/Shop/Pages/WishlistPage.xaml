<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WorkoutApp.View.Pages.WishlistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkoutApp.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:component="using:WorkoutApp.View.Components"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Orientation="Vertical" Height="610">
        <TextBlock
        Text="Wishlist"
        FontSize="24"
        FontWeight="Bold"
        HorizontalAlignment="Left"
        Margin="20,20,0,10"/>
        <component:VerticalWishlistItemListComponent 
            x:Name="WishlistItemListControl"
            WishlistItemClicked="VerticalWishlistItemListControl_WishlistItemClicked"
            WishlistItemRemoved="VerticalWishlistItemListControl_WishlistItemRemoved"
            Margin="20,0,0,0"
            Width="850"
            Height="Auto"/>
    </StackPanel>
</Page>
