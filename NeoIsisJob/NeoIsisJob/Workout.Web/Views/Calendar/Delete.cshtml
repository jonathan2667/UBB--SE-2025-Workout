@model Workout.Core.Models.UserWorkoutModel

@{
    ViewData["Title"] = "Delete Workout";
}

<div class="container mt-4">
    <h2 class="mb-4">Delete Workout</h2>
    
    <div class="alert alert-danger">
        Are you sure you want to delete this workout?
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@(Model.Workout?.Name ?? "Workout")</h5>
            <p class="card-text">
                <strong>Date:</strong> @Model.Date.ToString("MMMM d, yyyy")
            </p>
            <p class="card-text">
                <strong>Status:</strong> @(Model.Completed ? "Completed" : "Not Completed")
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="userId" value="@Model.UID" />
        <input type="hidden" name="workoutId" value="@Model.WID" />
        <input type="hidden" name="year" value="@Model.Date.Year" />
        <input type="hidden" name="month" value="@Model.Date.Month" />
        <input type="hidden" name="day" value="@Model.Date.Day" />
        
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 