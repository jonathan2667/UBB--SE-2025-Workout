@model IEnumerable<Workout.Core.Models.ClassModel>

@{
    ViewData["Title"] = "Classes";
}

<div class="container mt-4">
    <h1 class="mb-4">Available Classes</h1>

    <div class="row">
        @foreach (var classItem in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@classItem.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@classItem.ClassType.Name</h6>
                        <p class="card-text">@classItem.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-user-tie"></i> @classItem.TrainerFullName
                            </small>
                            <a href="@Url.Action("Details", "Class", new { id = classItem.CID })" class="btn btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript functionality here if needed
    </script>
} 