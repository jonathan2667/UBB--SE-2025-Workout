@model Workout.Core.Models.UserClassModel

@{
    ViewData["Title"] = "Create User Class";
}

<h1>Create User Class</h1>

<h4>User Class Registration</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label for="UID" class="form-label">User</label>
                <select asp-for="UID" class="form-select">
                    <option value="">-- Select User --</option>
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.ID">@user.ID</option>
                    }
                </select>
                <span asp-validation-for="UID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="CID" class="form-label">Class</label>
                <select asp-for="CID" class="form-select">
                    <option value="">-- Select Class --</option>
                    @foreach (var classItem in ViewBag.Classes)
                    {
                        <option value="@classItem.CID">@classItem.Name</option>
                    }
                </select>
                <span asp-validation-for="CID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 