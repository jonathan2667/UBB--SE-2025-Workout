@model List<Workout.Core.Models.UserClassModel>

@{
    ViewData["Title"] = "User Classes";
}

<h1>User Classes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                Class ID
            </th>
            <th>
                Date
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@item.UID" asp-route-classId="@item.CID" asp-route-date="@item.Date" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-userId="@item.UID" asp-route-classId="@item.CID" asp-route-date="@item.Date" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-userId="@item.UID" asp-route-classId="@item.CID" asp-route-date="@item.Date" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 