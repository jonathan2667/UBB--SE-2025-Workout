@model Workout.Core.Models.UserWorkoutModel

@{
    ViewData["Title"] = "Workout Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Workout Details for @Model.Date.ToString("MMMM d, yyyy")</h2>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@(Model.Workout?.Name ?? "Workout")</h5>
            <p class="card-text">
                <strong>Status:</strong> @(Model.Completed ? "Completed" : "Not Completed")
            </p>
            <p class="card-text">
                <strong>Description:</strong> @(Model.Workout?.Description ?? "No description available")
            </p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <a href="@Url.Action("Edit", new { userId = Model.UID, year = Model.Date.Year, month = Model.Date.Month, day = Model.Date.Day })" class="btn btn-primary">
                Edit Workout
            </a>
            <a href="@Url.Action("Delete", new { userId = Model.UID, year = Model.Date.Year, month = Model.Date.Month, day = Model.Date.Day })" class="btn btn-danger">
                Delete Workout
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                Back to Calendar
            </a>
        </div>
    </div>
</div> 