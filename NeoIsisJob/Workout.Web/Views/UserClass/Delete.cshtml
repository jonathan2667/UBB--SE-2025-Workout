@model Workout.Core.Models.UserClassModel

@{
    ViewData["Title"] = "Delete User Class";
}

<h1>Delete User Class</h1>

<h3>Are you sure you want to delete this user class registration?</h3>
<div>
    <h4>User Class Registration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UID)
        </dd>
        <dt class="col-sm-2">
            Class ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CID)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UID" />
        <input type="hidden" asp-for="CID" />
        <input type="hidden" asp-for="Date" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 