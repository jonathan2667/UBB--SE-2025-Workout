@model Workout.Web.Models.WorkoutModel

@{
    ViewData["Title"] = "Delete Workout";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3>Delete Workout</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4>Warning</h4>
                        <p>Are you sure you want to delete this workout?</p>
                    </div>
                    
                    <div class="mt-4">
                        <h4>@Model.Name</h4>
                        <hr />
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Name)</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.WorkoutTypeName)</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.WorkoutTypeName)</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary" style="width: 120px;">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-danger ms-2" style="width: 120px;" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 